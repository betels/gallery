<p id="notice"><%= notice %></p>


<h1>Listing Arts</h1>

<table class="table table-striped">

  <tbody>
    <% @arts.each do |art| %>
      <tr>
        <td>
         <div class= "image"> 
             <%= link_to (image_tag art.url, :style => "height:100px;width:150px"), art %>
         </div>
        </td>
        <td>
          <table>
            <tr>
              <td class="item-details-title">
              	<div class="name">
              	  <label>Name: </label>
              	</div>
            	</td>
            	<td class="item-details-description">	<%= art.name %> </td>
          	</tr>
          	<tr>
          	  <td class="item-details-title">
              	<div class="description">
                  <label>Description: </label>
              	</div>
            	</td>
            	<td class="item-details-description"><%= art.description %></td>
          	</tr>
          	<tr>
          	  <td class="item-details-title">
              	<div class="catagory">
              	  <label>Catagory: </label>
              	</div>
          	  </td>
          	  <td class="item-details-description"><%= art.catagory %></td>
          	</tr>
          	<tr>
          	  <td class="item-details-title">
              	<div class="size">
              	  <label>Size: </label>
              	</div>
              </td>
              <td class="item-details-description"><%= art.size %></td>
          	</tr>
          	<tr>
          	  <td class="item-details-title">
              	<div class ="price">
              	  <label>Price: </label>
              	</div>
               </td>
               <td class="item-details-description"> &#8364; <%= art.price %></td>
          	</tr>
        	</table>
          
          <div class="links">
            <% if current_user && current_user.admin? %>
              <%= link_to 'Edit', edit_art_path(art) %> |
              <%= link_to 'Delete', art, :data => {:confirm => 'Are you sure?'}, :method => :delete %>|
              <%= link_to 'Show', art, class: "action-link action-link-first" %>
            <% else %>
              <a href="/cart/<%= art.id %>">Add to Cart</a><br><br>
            <% end %>
          </div>
       
        </td>
      </tr>
    <% end %>
  </tbody>
  
</table>
 
<br>

