<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

 <ul class="users">
    <% @users.each do |user| %>
      <li>
        <%= gravatar_for user, size: 50 %> 
        <%= link_to user.name, user %>
        <% if current_user.admin? %>
         | <%= link_to "Delete", user, :data => {:confirm => 'Are you sure?'}, :method => :delete %>
         <% end %>
      </li>
    <% end %>
 </ul>

<%= will_paginate %>